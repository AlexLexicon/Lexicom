<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>lexicom.nuget.icon.png</PackageIcon>

    <Authors>Alex Stroot</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Derives the Lexicom.Smtp package to provide an implementation specific for a Console application project.</Description>
    <Copyright>2024</Copyright>
    <PackageProjectUrl>https://github.com/AlexLexicon/Lexicom/tree/master/Lexicom.Smtp.For.ConsoleApp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AlexLexicon/Lexicom</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <PackageTags>console;dependencyinjection;smtp</PackageTags>
  </PropertyGroup>

    <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
      <None Include="..\lexicom.nuget.icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>
    
  <ItemGroup>
    <ProjectReference Include="..\Lexicom.Smtp\Lexicom.Smtp.csproj" />
    <ProjectReference Include="..\Lexicom.Validation.For.ConsoleApp\Lexicom.Validation.For.ConsoleApp.csproj" />
  </ItemGroup>

</Project>
